{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2024",
    "module": "commonjs",
    // "baseUrl": "./",
    // "paths": {
    //   "@/*": ["src/*"]
    // },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "removeComments": true
  }
}
